<%if user_signed_in?%>

<h1>Friends</h1>

<table class="table table-striped table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>Name</th>
      
      <th>Email</th>
      <th>Mobile number</th>
      <th>Instagram</th>
      
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user==current_user%>
      <tr>
        <td>
        <%= link_to friend.First_name + ' ' + friend.Last_name,friend %>
        </td>
        <td><%= friend.Email %></td>
        <td><%= friend.Mobile_number %></td>
        <td><%= friend.Instagram %></td>
        
        <td><%= link_to 'Edit', edit_friend_path(friend),class:"btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path,class:"btn btn-secondary" %>
<%else%>
<h1>Hi</h1>

<p>gud mrng</p>

<%end%>