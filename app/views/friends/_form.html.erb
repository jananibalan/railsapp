  <div class="field form-group">
    <%= form.label :Last_name %>
    <%= form.text_field :Last_name,class:"form-control",placeholder:"Last Name" %>
  </div>

  <div class="field form-group">
    <%= form.label :Email %>
    <%= form.text_field :Email,class:"form-control",placeholder:"Email" %>
  </div>

  <div class="field form-group">
    <%= form.label :Mobile_number %>
    <%= form.text_field :Mobile_number,class:"form-control",placeholder:"Mobile Number" %>
  </div>

  <div class="field form-group">
    <%= form.label :Instagram %>
    <%= form.text_field :Instagram,class:"form-control",placeholder:"Insta ID" %>
  </div>

  <div class="field form-group">
    <% form.label :User %>
    <%= form.number_field :user_id,id: :friend_user_id,class:"form-control",value:current_user.id ,type: :hidden%>
  </div>
  
  <br/>
  <div class="actions">
    <%= form.submit class:"btn btn-dark"%>
